FROM node:20-alpine

WORKDIR /app

# Copy package files first for better caching
COPY ./FrontEnd/package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the frontend source
COPY ./FrontEnd/ .

# Expose port 3000
EXPOSE 3000
EXPOSE 24678

# Start the dev server
CMD ["npm", "run", "dev", "--", "--port", "3000", "--host", "0.0.0.0"]
